
            <form action="Login" method="post" name="login-form"
                  class="form-horizontal col-sm-5 col-sm-offset-3">
                <div class="form-group">
                    <label for="host" class="col-sm-2 col-sm-offset-1 control-label">Host:</label>
                    <div class="col-sm-8">
                        <input id="host" name="host" type="text" class="form-control" placeholder="Host">
                    </div>
                </div>
                <div class="form-group">
                    <label for="user" class="col-sm-2 col-sm-offset-1 control-label">User:</label>
                    <div class="col-sm-8">
                        <input id="user" name="user" type="text" class="form-control" placeholder="User">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 col-sm-offset-1 control-label">Password:</label>
                    <div class="col-sm-8">
                        <input id="password" name="password" type="password" class="form-control" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-8">
                        <button type="submit" class="btn btn-default">Sign in</button>
                    </div>
                </div>
            </form>
